<.form let={f} for={@changeset} action={@action}>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :credits %>
  <%= number_input f, :credits, placeholder: @user.credits %>
  <%= error_tag f, :credits %>

  <div>
    <%= submit "Save" %>
  </div>
</.form>
